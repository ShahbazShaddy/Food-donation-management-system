<script>
  // Simple client-side validation enhancement
  (function(){
    const form = document.querySelector('.contact-page form');
    if(!form) return;
    form.addEventListener('submit', e => {
      if(!form.checkValidity()){
        e.preventDefault();
        e.stopPropagation();
      } else {
        form.querySelector('.form-status').style.display='inline';
      }
      form.classList.add('was-validated');
    });
  })();
</script>

